{
  "name": "easy-graphql-layer",
  "version": "0.0.1",
  "description": "Create api with ease",
  "main": "index.js",
  "scripts": {
    "postinstall": "cp -r ./bash/lib/* ./node_modules/@gql2ts/ && rm -rf ./node_modules/graphql-rabbitmq-subscriptions/node_modules",
    "start:ts": "ts-node index.ts",
    "start": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/main.ts",
    "start:force": "docker restart ganache-cli-tests && npm run truffle-migrate && npm run start:ts",
    "start:prod": "npm run truffle-migrate && pm2-docker process.yml --only APP",
    "lint": "tslint -c tslint.json 'graphql/**/*.{ts,tsx}'",
    "pretest": "npm run lint",
    "test": "npm run generate:typings || true && jest",
    "start:watch": "pm2 start index.ts --watch",
    "debug": "ts-node --inspect index.ts",
    "stop:docker": "docker stop anti-theft-api-prod",
    "start:docker": "docker-compose -p anti-theft-api-prod up --force-recreate -d",
    "build:docker": "docker build -t antitheft/api/master .",
    "tsc": "tsc || true",
    "generate:typings": "npm run generate:schema && npm run gql2ts",
    "generate:schema": "apollo-codegen introspect-schema http://localhost:8200/graphql --output ./api-types/schema.json",
    "gql2ts": "gql2ts ./api-types/schema.json -o ./api-types/graphql.d.ts"
  },
  "author": "Kristiyan Tachev",
  "license": "MIT",
  "dependencies": {
    "@cdm-logger/server": "^3.0.2",
    "@types/hapi": "^16.1.9",
    "apollo-codegen": "^0.18.3",
    "apollo-errors": "^1.5.1",
    "apollo-server-hapi": "^1.3.2",
    "apollo-upload-server": "^4.0.2",
    "boom": "^5.2.0",
    "bunyan": "^1.8.12",
    "fse": "^4.0.0",
    "gql2ts": "^1.4.0",
    "graphql": "^0.12.3",
    "graphql-rabbitmq-subscriptions": "^1.1.0",
    "graphql-subscriptions": "^0.5.6",
    "graphql-tools": "^2.14.1",
    "hapi": "^16.6.2",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "nodemon": "^1.15.1",
    "pg": "6.4.2",
    "pm2-docker": "^2.1.0",
    "reflect-metadata": "^0.1.10",
    "rx": "^4.1.0",
    "rxjs": "^5.5.6",
    "sequelize": "^4.32.2",
    "sequelize-typescript": "^0.6.2",
    "socket.io": "^2.0.3",
    "subscriptions-transport-ws": "^0.9.4",
    "tslint": "^5.8.0",
    "tslint-language-service": "^0.9.8"
  },
  "devDependencies": {
    "@types/graphql": "^0.11.2",
    "@types/jest": "^22.1.0",
    "@types/node": "^8.0.28",
    "@types/sequelize": "github:types/sequelize",
    "graphql-tester": "0.0.5",
    "jest": "^22.1.4",
    "jest-cli": "^22.1.4",
    "pm2": "^2.6.1",
    "sequelize-cli": "^3.0.0",
    "ts-jest": "^22.0.1",
    "ts-node": "^3.3.0",
    "typescript": "^2.7.1",
    "yargs": "^10.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "rootDir": "./",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/graphql/.*\\.spec.(ts|tsx|js)$",
    "verbose": true,
    "collectCoverage": true
  }
}
