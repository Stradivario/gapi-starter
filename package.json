{
  "name": "@gapi/starter-simple",
  "version": "1.2.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run install-ipfs-packages",
    "install-ipfs-packages": "node ./node_modules/@rxdi/core/bin/root.js install",
    "start": "gapi start --local",
    "test": "gapi test --local",
    "lint": "echo"
  },
  "author": "Kristiyan Tachev (Stradivario)",
  "license": "MIT",
  "dependencies": {
    "@gapi/core": "^1.1.0"
  },
  "peerDependencies": {
    "@gapi/cli": "^1.1.0"
  },
  "ipfs": {
    "ipfsProvider": "https://ipfs.io/ipfs/",
    "dependencies": [
      "QmWtJLqyokMZE37DgncpY5HhFvtFQieBzMPDQ318aJeTw6"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "./src/**/*.spec.ts"
    ],
    "verbose": false,
    "exec": "ts-node ./src/main.ts",
    "watch": [
      "./src/**/*.ts"
    ],
    "events": {
      "restart": "sleep 5 && gapi schema introspect"
    },
    "ext": "ts"
  },
  "devDependencies": {
    "parcel-bundler": "^1.9.7",
    "typescript": "^2.9.1"
  }
}
