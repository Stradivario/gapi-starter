{
  "name": "@gapi/starter-simple",
  "version": "1.4.29",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run install-ipfs-packages",
    "install-ipfs-packages": "node ./node_modules/@rxdi/core/bin/root.js install",
    "start": "./node_modules/.bin/gapi start --local",
    "test": "./node_modules/.bin/gapi test --local",
    "lint": "echo"
  },
  "author": "Kristiyan Tachev (Stradivario)",
  "license": "MIT",
  "dependencies": {
    "@gapi/core": "^1.4.27"
  },
  "ipfs": [
    {
      "provider": "https://ipfs.io/ipfs/",
      "dependencies": [
        "QmWtJLqyokMZE37DgncpY5HhFvtFQieBzMPDQ318aJeTw6"
      ]
    }
  ],
  "nodemonConfig": {
    "ignore": [
      "./src/**/*.spec.ts"
    ],
    "verbose": false,
    "exec": "ts-node ./src/main.ts",
    "watch": [
      "./src/**/*.ts"
    ],
    "events": {
      "restart": "sleep 5 && gapi schema introspect"
    },
    "ext": "ts"
  },
  "devDependencies": {
    "typescript": "^3.0.1",
    "@gapi/cli": "^1.4.27"
  }
}
